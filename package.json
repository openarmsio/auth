{
  "name": "thebackbone",
  "version": "1.0.0",
  "description": "NodeJS + MongoDB",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Alex Stevens <http://www.github.com/asteezy24>",
  "scripts": {
    "start": "node ./src/app",
    "dev": "PORT=3020 nodemon src/app.js --exec babel-node",
    "build": "rm -rf dist; babel src -d dist",
    "lint": "eslint src/ --fix",
    "test": "jest src/ --watch",
    "pretty": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "Router": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "deo": "0.0.2",
    "express": "^4.17.3",
    "graphql": "^14.3.1",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.6.0",
    "morgan": "^1.9.1",
    "node-schedule": "^1.3.2",
    "ololog": "^1.1.129",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-preset-node8": "^1.1.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-google": "^0.11.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.19.1",
    "regenerator-runtime": "^0.12.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma --no-semi es5 --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  }
}
